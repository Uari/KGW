<mapper namespace="com.mybatis.mapper.NoticeListMapper">

    <select id="noticeList" parameterType="com.vo.NoticeBoardVO" resultType="com.vo.NoticeBoardVO">
        select
        notice_no,
        emp_no,
        notice_title,
        notice_content,
        category,
        notice_hit,
        notice_pin,
        pin_start,
        pin_end,
        reg_date,
        mod_date
        from
        notice
        <where>
         <if test="notice_no != null">AND notice_no=#{notice_no}</if>
            <!--            <if test="gubun != null">-->
            <!--                <choose>-->
            <!--                    <when test='gubun.equals("board_title")'>-->
            <!--                        AND board_title LIKE '%'||#{keyword}||'%'-->
            <!--                    </when>-->
            <!--                    <when test='gubun.equals("board_no")'>-->
            <!--                        AND board_no = #{keyword}-->
            <!--                    </when>-->
            <!--                    <when test='gubun.equals("emp_no")'>-->
            <!--                        AND emp_no = #{keyword}-->
            <!--                    </when>-->
            <!--                </choose>-->
            <!--            </if>-->
        </where>
        order by notice_no desc
    </select>

<!--    <delete id="kiwoomNoticeDelete" parameterType="int">-->
<!--        delete from media_board where board_no= #{board_no}-->
<!--    </delete>-->

    <insert id="noticeInsert" parameterType="com.vo.NoticeBoardVO">
        INSERT INTO notice (
            notice_no,
            emp_no,
            notice_title,
            notice_content,
            category,
            notice_hit,
            notice_pin,
            pin_start,
            pin_end,
            reg_date,
            mod_date
        ) VALUES (
            notice_pk_seq.nextval,
                     1004,
                    #{notice_title},
                    #{notice_content},
                  '카테고리',
                     1,
                     'y',
                     '2024-01-01',
                     '2024-01-01',
                     TO_CHAR(SYSDATE, 'YYYY-MM-DD HH24:MI:SS'),
                     TO_CHAR(SYSDATE, 'YYYY-MM-DD HH24:MI:SS')
                 )
    </insert>

    <delete id="noticeDelete" parameterType="int">
        delete from notice where notice_no= #{notice_no}
    </delete>

    <update id="noticeModify" parameterType="com.vo.NoticeBoardVO">
        update notice
        set
            notice_title = #{notice_title},
            notice_content = #{notice_content},
            mod_date= TO_CHAR(SYSDATE, 'YYYY-MM-DD HH24:MI:SS')
        where notice_no = #{notice_no}
    </update>


</mapper>
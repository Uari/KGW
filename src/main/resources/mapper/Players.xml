<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mybatis.mapper.HitterMapper">
    <select id="selectHitters" parameterType="map"  resultType="com.vo.HittersVO">
        SELECT
        H_NAME,
        H_TEAM,
        H_AVG,
        H_AB,
        H_H,
        H_HR,
        H_R,
        H_RBI,
        H_SO,
        H_SB,
        H_OBP,
        H_SLG,
        H_WAR,
        H_OPS
      FROM HITTER
    </select>

    <select id="HitterCount" parameterType="integer" resultType="int">
        SELECT COUNT(*) FROM HITTER;
    </select>

    <select id="SelectPitchers" parameterType="map" resultType="com.vo.PitchersVO">
    SELECT
        P_ID,
        P_NAME,
        P_TEAM,
        p_ERA,
        P_IP,
        P_WIN,
        P_LOSE,
        P_SAVE,
        P_H,
        P_OB,
        P_BH,
        P_WAR,
        P_WHIP
    FROM PITCHER


    </select>

</mapper>
